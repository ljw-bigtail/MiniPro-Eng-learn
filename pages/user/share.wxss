/* pages/user/share.wxss */

page{min-height: 100vh; background: #eaeaea; overflow-y: auto}

.card{margin: 20rpx; border-radius: 12rpx; overflow: hidden; background: #fff; padding: 20rpx;}
.card image{display: block; margin: 0 auto}

.card.shareBtn{background: rgb(255, 46, 99);padding: 0}

.card button{background: transparent;border: 0;color: #fff;height: 80rpx; line-height: 80rpx; font-size: 36rpx;border-radius: 40rpx;}
.card button::after{display: none}