/* pages/study/index.wxss */

.container{height: 100vh}
.btnBox{height: calc(100vh - 100px); box-sizing: border-box; display: flex; flex-direction: column; align-items: center; justify-content: space-evenly}
.btnBox .btn{display: flex;width: 40vw; height: 40vw; border-radius: 50%; overflow: hidden;align-items: center; justify-content: center; border: 1px solid rgb(255, 46, 99);font-size: 36rpx}
.btnBox .btn:not(.light){background: rgb(255, 46, 99); color: #fff;}
.btnBox .btn.light{color: rgb(255, 46, 99); background: #fff;}

.btnBox .tip{font-size: 24rpx; line-height: 36rpx; margin-top: -80rpx; color: #252a34; margin-left: 40rpx;margin-right: 40rpx;}