/**index.wxss**/
.swiper swiper{width: 100%;}
.swiper swiper navigator{width: 100%; height: 100%}
.swiper swiper image{width: 100%; height: 100%}

.ul{background: #fff;color: #252a34;padding: 0 40rpx; padding-bottom: 100rpx}
.ul .li {padding: 32rpx 0;}
.ul .li.tips{padding: 60rpx 0; text-align: center; font-size: 24rpx; color: #eaeaea;display: block;}
.ul .li.btn{padding: 20rpx 0; margin: 40rpx 0; text-align: center; font-size: 24rpx; color: #eaeaea;display: block; background: rgb(255, 46, 99);border-radius: 40rpx}
.ul .li > view:nth-child(1){font-size: 24rpx; line-height: 24rpx; padding: 0 20rpx; min-width: 64rpx;overflow: hidden}
.ul .li > view:nth-child(2){flex: 1; font-size: 32rpx;}
.ul .li > view:nth-child(3){height: 40rpx;margin-right: 6px}
.ul .li > view:nth-child(4){height: 40rpx;}

.card{height: 60vh}
.lrc{overflow-y: auto; height: 100%; position: relative; z-index: 10; width: 100%}
.lrc_line{display: block; margin: 60rpx 20rpx; font-size: 28rpx; text-align: center;}
.lrc_line.active text{color: rgb(255, 46, 99); font-weight: bold}
.lrc_line text{padding-right: 8rpx}


.card{margin: 20rpx; border-radius: 12rpx; overflow: hidden; background: #fff}
.card.sp{margin: 0; border-radius:0}
.card.header{background: rgb(255, 46, 99); color: #fff; padding: 60rpx 32rpx 32rpx}

.read{display: flex; align-items: center; justify-content: space-between}
.read .word_mp3_item{width: 50%; margin-bottom: 30rpx;}
.read .v-btn{margin-left: 12rpx; position: relative; bottom: -6rpx}

.card.header .ul{color: #fff;background: transparent}
.card.header .ul view{font-size: 28rpx; margin-bottom: 20rpx; line-height: 32rpx;}