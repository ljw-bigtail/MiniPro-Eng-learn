/* pages/songs/index.wxss */

.container{height: 100vh; overflow: hidden; display: flex; flex-direction: column;}
.title{margin-left: 40rpx; padding: 32rpx 40rpx 32rpx 0;}
.title text{display: block; line-height: 36rpx;}
.title text:first-child{font-size: 32rpx; padding-bottom: 20rpx; color: #252a34}
.title text:last-child{font-size: 28rpx;color: #999}

.content{flex: 1;display: flex; flex-direction: column;padding-bottom: 20rpx}
.center{position: relative;  flex: 1; padding: 40rpx; display: flex;padding-bottom: 60rpx}
.center image{width: 400rpx; height: 400rpx; border-radius: 50%; overflow: hidden; transform: scale(-50%, -50%); opacity: .2; margin-left: -200rpx; margin-top: -200rpx; position: absolute; top: 50%; left: 50%}

.lrc{overflow-y: auto; height: 100%; position: relative; z-index: 10; width: 100%}
.lrc_line{display: block; margin: 60rpx 20rpx; font-size: 28rpx; text-align: center;}
.lrc_line.active text{color: rgb(255, 46, 99); font-weight: bold}
.lrc_line text{padding-right: 8rpx}

.progress{margin: 0 16%}

.bottom{height: 180rpx; display: flex; align-items: center; justify-content: space-between; padding: 40rpx}
.btn_box{display: flex;align-items: center; justify-content: center}
.btn_box .btn.big{padding: 0 40rpx}


@keyframes round{
  from {transform: rotate(0);}
  to {transform: rotate(360deg);}
}
.animateRound{animation: round 2.8s infinite linear; animation-play-state: running}
.animatePaused{animation-play-state: paused}



.card{margin: 20rpx; border-radius: 12rpx; overflow: hidden; background: #fff; padding: 20rpx}
.card.sp{margin: 0; border-radius:0}
.card.header{background: rgb(255, 46, 99); color: #fff;}
/* .card.header{border-bottom: rgb(255, 46, 99) 1px solid; color: rgb(255, 46, 99);} */

.card text{font-size: 32rpx; line-height: 40rpx; font-family: -apple-system,BlinkMacSystemFont,SF UI Text,Helvetica Neue,PingFang SC,Hiragino Sans GB,Microsoft YaHei UI,Microsoft YaHei,Arial,sans-serif}

.card.con{text-indent: 2em;}

.card.cn{display: block}
.card.cn view{text-align: center;font-size: 32rpx; color: #666}

.card .title{font-size: 44rpx; display: block; text-align: center}

.read{display: flex; align-items: center; justify-content: space-between}
.read .word_mp3_item{width: 50%; margin-bottom: 30rpx;}
.read .v-btn{margin-left: 12rpx; position: relative; bottom: -6rpx}

.card.header .ul{color: #fff;}
.card.header .ul view{font-size: 28rpx; margin-bottom: 20rpx; line-height: 32rpx;}

.tips{padding: 40rpx 0 60rpx; text-align: center; font-size: 24rpx; color: #fff;display: block;}